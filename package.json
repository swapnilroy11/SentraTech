{
  "name": "sentratech-monorepo",
  "private": true,
  "workspaces": {
    "packages": ["packages/*", "server"],
    "nohoist": [
      "**/react",
      "**/react-dom",
      "**/react-router-dom",
      "**/react/**",
      "**/react-dom/**",
      "**/react-router-dom/**"
    ]
  },
  "scripts": {
    "build:website": "cd packages/website && yarn install --frozen-lockfile && yarn build",
    "build:dashboard": "cd packages/dashboard && yarn install --frozen-lockfile && yarn build",
    "build": "yarn build:website",
    "install": "yarn install --frozen-lockfile",
    "start": "cd packages/website && yarn start"
  },
  "dependencies": {
    "node-fetch": "^2.7.0",
    "playwright": "^1.55.1"
  },
  "resolutions": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "lucide-react": "^0.263.1",
    "react-router-dom": "^6.28.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0"
  }
}
